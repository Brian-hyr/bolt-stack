generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  username        String    @unique
  email           String    @unique
  password        String
  contato         String?
  chatid          String?
  is_admin        Boolean   @default(false)
  is_collaborator Boolean   @default(false)
  is_client       Boolean   @default(false)
  date_joined     DateTime  @default(now())
  last_login      DateTime?

  @@map("users")
}

model Cliente {
  id         Int       @id @default(autoincrement())
  name       String    @db.VarChar(255)
  sigla      String?   @db.VarChar(50)
  comentario String?   @db.Text
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  asn_id     Int?
  domain_id  Int?
  hosts      Host[]

  @@map("clientes")
}

model Host {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  comentario  String?
  status      String    @default("ativo")
  model_id    Int?
  cliente_id  Int?
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())
  deleted_at  DateTime?
  cliente     Cliente?  @relation(fields: [cliente_id], references: [id])
  ips         Ip[]

  @@map("hosts")
}

model Ip {
  id          Int      @id @default(autoincrement())
  ip_address  String
  version     String
  type        String?
  host_id     Int
  host        Host     @relation(fields: [host_id], references: [id], onDelete: Cascade)

  @@map("ips")
}

model PtpLink {
  id            Int      @id @default(autoincrement())
  ptp_number    Int
  host_a_id     Int
  host_b_id     Int
  ip_v4_host_a  String   @db.Cidr
  ip_v4_host_b  String   @db.Cidr
  vlan_ipv4     Int
  vlan_ipv6     Int
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now())

  @@map("ptp_links")
}