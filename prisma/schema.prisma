generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  username        String    @unique
  email           String    @unique
  password        String
  contato         String?
  chatid          String?
  is_admin        Boolean   @default(false)
  is_collaborator Boolean   @default(false)
  is_client       Boolean   @default(true)
  date_joined     DateTime  @default(now())
  last_login      DateTime?

  @@map("users")
}

model Cliente {
  id         Int       @id @default(autoincrement())
  name       String    @db.VarChar(255)
  sigla      String?   @db.VarChar(50)
  comentario String?   @db.Text
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())
  asn_id     Int?
  domain_id  Int?

  @@map("clientes")
}

model Workflow {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  nodes       Json      // Stores the workflow nodes configuration
  edges       Json      // Stores the connections between nodes
  is_active   Boolean   @default(true)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @default(now())
  user_id     String    // Reference to the user who created the workflow
  client_id   Int?      // Optional reference to a client

  @@map("workflows")
}